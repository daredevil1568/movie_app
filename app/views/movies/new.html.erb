<% provide(:title, "Add Movie") %>
<h1>Add New Movie</h1>

<div class="row">
  <div class="span6 offset3">
   <%= form_for @movie, :html =>{ :multipart => true } do |f| %>
      <%= render 'shared/movieerror' %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :director %>
      <%= f.text_field :director %>
      <%= f.label :writers %>
      <%= f.text_field :writers %>
      <%= f.label :stars %>
      <%= f.text_field :stars %>
      <%= f.label :description %>
      <%= f.cktext_area :content, rows: 10 %>
      <%= f.label :photo, "Add Poster" %>
      <%= f.file_field :photo %>
      <br/>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>