

<%= will_paginate @movies %>

<ul class="users">

  <% @movies.each do |movie| %>
  
   <li class="list-group-item">
   <div class="list">
     <div class="left" ><%=  image_tag movie.photo.url(:small) %></div>
     <div class="right">
    <div class="text"><strong>Name:</strong><%= link_to movie.name, movie %></div>

     <div class="text"> <strong>Director: </strong><%= movie.director %></div>
      <div class="text"> <strong> Review:</strong> <%= movie.reviews.count %></div>
      <% if signed_in? %>
   <div class="text">   <%= link_to " Add Review", movie %></div>
    
    <% end %>
    </div>
    </div>
    </li>
  <% end %>
</ul>
  <%= will_paginate @movies %>

